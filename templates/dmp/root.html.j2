
<!DOCTYPE HTML>
{# ------------------------------------------------------------------------------------ #}
{#  VARIABLES                                                                           #}
{# ------------------------------------------------------------------------------------ #}
{% set km = dmp.filledKnowledgeModel %}
{% set report = dmp.report %}
{% set metricDefinitions = dmp.metrics %}
{% set levelDefinitions = dmp.levels %}

{# ------------------------------------------------------------------------------------ #}
{#  LAYOUT                                                                              #}
{# ------------------------------------------------------------------------------------ #}

{% macro renderHeader() -%}
  <header>
    <h1>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 204 153"><path d="M151,113.37,137.24,89.08l-24.67-7.25,19-2.76L113.81,47.7,95.94,37.89l17.18,2.85,37.53,5.7L94.59,1.33c-2.76-2.67-6.88-1.47-8.32,2.44l-14.4,55,20,3.36L69.71,67,57.32,114.31l36.85,5.2-41.56,6.63L.66,152.1s34.15-1.54,45.76-3.16c44-6.14,76.34-6.76,120.36-13.54,7.71-1.19,37.56-20.62,37.56-20.62Z" style="fill:#333"/></svg>
      {{km.name}}
    </h1>
    <dl>
      <dt>Organization</dt>
      <dd>{{dmp.organization.name}}</dd>
      {% if dmp.createdBy %}
        <dt>Created by</dt>
        <dd>{{dmp.createdBy.name}} {{dmp.createdBy.surname}} (<a href="mailto:{{dmp.user.email}}">{{dmp.createdBy.email}}</a>)</dd>
      {% endif %}
      <dt>Based on</dt>
      <dd>{{dmp.package.name}}, {{dmp.package.version}}</dd>
      <dt>Project Phase</dt>
      <dd>{{renderCurrentLevel()}}</dd>
      <dt>Created at</dt>
      <dd>{{dateformat(replace(dmp.createdAt, slice(dmp.createdAt,19), "Z"), "%d.%m.%Y")}}</dd>
    </dl>
  </header>
{%- endmacro -%}

{% macro renderContent() -%}
  {{renderChapters(km.chapters)}}
{%- endmacro -%}

{% macro renderFooter() -%}
  <footer>
    Data Managament Plan generated by Data Stewardship Wizard <<a href="https://ds-wizard.org" target="_blank">https://ds-wizard.org</a>>
  </footer>
{%- endmacro -%}

{# ------------------------------------------------------------------------------------ #}
{#  HEADER                                                                              #}
{# ------------------------------------------------------------------------------------ #}

{% macro renderCurrentLevel() -%}
  {% for levelDefinition in levelDefinitions %}
    {% if levelDefinition.level == dmp.level %}
      {{levelDefinition.title}}
    {% endif %}
  {% endfor %}
{%- endmacro -%}

{# ------------------------------------------------------------------------------------ #}
{#  REPORT                                                                              #}
{# ------------------------------------------------------------------------------------ #}
{% macro renderReport(chapter) -%}
  <section class="report">
    <h3 class="title">Report</h3>
    {{renderIndications(chapter)}}
    {{renderMetrics(chapter)}}
  </section>
{%- endmacro -%}

{% macro renderIndications(chapter) -%}
  <h4>Indications</h4>
  <div class="indications">
    <table>
      <tbody>
        {% for chapterReport in report.chapterReports %}
          {% if chapterReport.chapterUuid == chapter.uuid %}
            {% for indication in chapterReport.indications %}
              {{renderIndication(indication)}}
            {% endfor %}
          {% endif %}
        {% else %}
          No indications
        {% endfor %}
      </tbody>
    </table>
  </div>
{%- endmacro -%}

{% macro renderIndication(indication) -%}
  <tr>
    <td>Answered</td>
    <td>{{indication.answeredQuestions}}</td>
  </tr>
  <tr>
    <td>Unanswered</td>
    <td>{{indication.unansweredQuestions}}</td>
  </tr>
{%- endmacro -%}

{% macro renderMetrics(metrics) -%}
  <h4>Metrics</h4>
  <div class="metrics">
    <table>
        <thead>
            <tr>
                <th>Metric</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
          {% for chapterReport in report.chapterReports %}
            {% if chapterReport.chapterUuid == chapter.uuid %}
              {% for metric in chapterReport.metrics %}
                {{renderMetric(metric)}}
              {% endfor %}
            {% endif %}
          {% else %}
            No indications
          {% endfor %}
        </tbody>
    </table>
  </div>
{%- endmacro -%}

{% macro renderMetric(metric) -%}
  <tr>
    <td>
      {% for metricDefinition in metricDefinitions %}
        {% if metric.metricUuid == metricDefinition.uuid %}
          {{metricDefinition.title}}
        {% endif %}
      {% endfor %}
    </td>
    <td>{{metric.measure}}</td>
  </tr>
{%- endmacro -%}

{# ------------------------------------------------------------------------------------ #}
{#  KNOWLEDGE MODEL                                                                     #}
{# ------------------------------------------------------------------------------------ #}
{% macro renderChapters(chapters) -%}
  {% for chapter in chapters %}
    {{renderChapter(chapter)}}
  {% else %}
    No chapters
  {% endfor %}
{%- endmacro -%}

{% macro renderChapter(chapter) -%}
  <section class="chapter" id="{{chapter.uuid}}">
    <h2 class="title">{{chapter.title}}</h2>
    <p class="text-light">{{chapter.text}}</p>
    {{renderReport(chapter)}}
    {{renderQuestions(questions)}}
  </section>
{%- endmacro -%}

{# --------------------------------------------------- #}
{# --------------------------------------------------- #}

{% macro renderQuestions(questions) -%}
  {% for question in chapter.questions %}
    {{renderQuestion(question)}}
  {% else %}
    No questions
  {% endfor %}
{%- endmacro -%}

{% macro renderQuestion(question) -%}
  {% macro questionClasses(question) -%}
      "question {{ (question.requiredLevel != null && question.requiredLevel <= dmp.level) ? "required" : "optional"}} {{ question.requiredLevel != null ? concat("phase-", question.requiredLevel) : "phase-none"}}"
  {%- endmacro -%}
  <div class={{questionClasses(question)}} id="{{question.uuid}}">
    <h4 class="title">{{question.title}}</h4>
    <p class="text text-light">{{question.text}}</p>
    <div class="extra-data">
      {{renderTags(question.tagUuids)}}
      {{renderReferences(question.references)}}
      {{renderExperts(question.experts)}}
    </div>
    {{renderAnswer(question)}}
  </div>
{%- endmacro -%}

{# --------------------------------------------------- #}
{# --------------------------------------------------- #}

